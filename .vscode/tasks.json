{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "serve-angular",
            "command": "ng",
            "type": "shell",
            "args": [
                "serve"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/App"
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "build-chat",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Chat/src/Chat.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        }
    ]
}