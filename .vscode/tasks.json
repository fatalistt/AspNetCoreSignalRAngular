{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/AspNetCoreSignalRAngular.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish:backend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/AspNetCoreSignalRAngular.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "--configuration",
                "Release",
                "--output",
                "${workspaceFolder}/Release",
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish:frontend",
            "command": "npm",
            "type": "shell",
            "args": [
                "--prefix",
                "${workspaceFolder}/src/AngularApp",
                "run",
                "build",
                "--",
                "--prod",
                "--output-path",
                "${workspaceFolder}/Release/AngularApp/dist",
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "dependsOn": [
                "publish:backend",
                "publish:frontend"
            ],
            "problemMatcher": [
                "$msCompile",
                "$tsc"
            ]
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/src/AspNetCoreSignalRAngular.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}