{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome start",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/src/App"
        },
        {
            "name": "Chat",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-chat",
            "program": "${workspaceFolder}/src/Chat/src/bin/Debug/netcoreapp3.0/Chat.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Chat/src",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://127.0.0.1:0"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "justMyCode": false
        }
    ]
}